{
  "name": "todo-list-api",
  "version": "0.0.0-dev",
  "description": "Simple Todo List API with authentication in express.js.",
  "main": "dist/server.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p ./tsconfig.build.json",
    "start": "node dist/server",
    "dev": "cross-env DEBUG=api:* ts-node-dev --files src/server.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:cov": "vitest run --coverage",
    "docker:build": "docker compose build",
    "docker:start": "docker compose up -d",
    "docker:stop": "docker compose down",
    "docker:dev:build": "docker compose -f compose.dev.yml build",
    "docker:dev:start": "docker compose -f compose.dev.yml up -d",
    "docker:dev:restart": "docker compose -f compose.dev.yml restart",
    "docker:dev:stop": "docker compose -f compose.dev.yml down",
    "docker:test:build": "docker compose -f compose.test.yml build",
    "docker:test:run": "docker compose -f compose.test.yml run --remove-orphans server npm test",
    "docker:test:watch": "docker compose -f compose.test.yml run --remove-orphans server npm run test:watch"
  },
  "keywords": [
    "todo-list",
    "todos",
    "authentication",
    "express",
    "nodejs"
  ],
  "author": "Shubham Vishwakarma",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.0.9",
    "cross-env": "^7.0.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "debug": "^4.4.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.12.1",
    "morgan": "^1.10.0",
    "zod": "^3.24.2"
  }
}
